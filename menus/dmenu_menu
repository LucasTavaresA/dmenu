#!/bin/sh

data=$(date +'%A %d/%m/%Y %H:%M')
volume=$(amixer -D pulse sget Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }')

case "$(printf " Programas\\n Copiado\\n❕ Importante\\n Favoritos\\n Notas\\n Histórico\\n韛 Corretor\\n韛 Tradutor\\n😂 Emojis\\n Print\\n VMs\\n﫭 Des/Montar" | dmenu -l 4 -g 3 -h 20 -c -cw 500 -p "$data - 墳 $volume")" in
    " Programas") dmenu_run ;;
    " Copiado") dmenu_clip ;;
    "❕ Importante") dmenu_favoritos importante ;;
    " Favoritos") dmenu_favoritos ;;
    " Notas") dmenu_notas ;;
    " Histórico") dmenu_shhistory ;;
    "韛 Corretor") dmenu_corretor ;;
    "韛 Tradutor") dmenu_tradutor ;;
    "😂 Emojis") dmenu_emoji ;;
    " Print") dmenu_print ;;
    " VMs") dmenu_virtualbox ;;
    "﫭 Des/Montar") dmenu_mont ;;
esac
