#!/bin/sh

tocando=$(deadbeef --nowplaying-tf '%filename%')

case "$(printf "\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n\\n玲\\n\\n怜\\n" | dmenu -h 30 -l 1 -g 40 -y 350 -z 1360 -n 19 -p "$tocando")" in
    "玲") deadbeef --prev ;;
    "") deadbeef --play-pause ;;
    "怜") deadbeef --next ;;
    "") deadbeef --quit ;;
esac
