#!/bin/sh

screenshot_preview="sxiv $HOME/screenshot.png"

case "$(printf "uma area selecionada\\njanela atual\\ntela cheia (Temporizar)\\numa area selecionada (copiar)\\njanela atual (copiar)\\ntela cheia (Temporizar) (copiar)" | dmenu -l 31 -h 20 -c -cw 100 -p "Area do print?")" in
	"uma area selecionada") maim -s screenshot.png && $screenshot_preview ;;
    "janela atual") maim -i "$(xdotool getactivewindow)" screenshot.png && $screenshot_preview ;;
    "tela cheia (Temporizar)")
        tempo=$(echo "" | dmenu -c -p "Esperar em segundos:")
        sleep $tempo && maim screenshot.png && $screenshot_preview
    ;;
	"uma area selecionada (copiar)") maim -s | xclip -selection clipboard -t image/png ;;
	"janela atual (copiar)") maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
    "tela cheia (Temporizar) (copiar)")
        tempo=$(echo "" | dmenu -c -p "Esperar em segundos:")
        sleep $tempo && maim | xclip -selection clipboard -t image/png
    ;;
esac
